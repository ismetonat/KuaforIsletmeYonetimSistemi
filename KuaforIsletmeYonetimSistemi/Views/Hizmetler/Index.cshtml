@model IEnumerable<Hizmetler>

@{
    ViewData["Title"] = "Hizmetler Listesi";
    var email = TempData["Email"] as string; // TempData'dan email alınıyor
    TempData.Keep("Email"); // TempData'yı sonraki isteklerde kullanılabilir tutma
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #a8edea, #fed6e3);
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            margin: 50px auto;
            max-width: 1200px;
            padding: 20px;
            background: #fff;
            border-radius: 15px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #333;
            text-align: center;
            font-size: 2rem;
            margin-bottom: 30px;
        }

        .add-btn {
            display: block;
            width: fit-content;
            margin: 20px auto;
            background: #4caf50;
            color: #fff;
            padding: 10px 25px;
            border-radius: 30px;
            font-size: 1rem;
            text-decoration: none;
            text-align: center;
            font-weight: bold;
            transition: background 0.3s;
        }

            .add-btn:hover {
                background: #3b823a;
            }

        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease-in-out;
        }

            .card:hover {
                transform: scale(1.05);
            }

            .card img {
                border-top-left-radius: 15px;
                border-top-right-radius: 15px;
                height: 200px;
                object-fit: cover;
            }

        .card-body {
            text-align: center;
        }

        .btn {
            border: none;
            padding: 10px 20px;
            border-radius: 30px;
            text-decoration: none;
            color: #fff;
            font-size: 1rem;
            transition: background 0.3s;
        }

        .btn-primary {
            background: #4caf50;
        }

            .btn-primary:hover {
                background: #3b823a;
            }

        .btn-danger {
            background: #ff3d3d;
        }

            .btn-danger:hover {
                background: #d92c2c;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>Hizmetler Listesi</h2>
        @if (email == "y225052054@sakarya.edu.tr")
        {
            <!-- Hizmet Ekle Butonu -->
            <a href="/Hizmetler/Create" class="add-btn">+ Hizmet Ekle</a>
        }
        <div class="row">
            @foreach (var hizmet in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="@hizmet.GorselYolu" class="card-img-top" alt="@hizmet.Ad">
                        <div class="card-body">
                            <h5 class="card-title">@hizmet.Ad</h5>
                            <p class="card-text">Fiyat: @hizmet.Fiyat TL</p>
                            <p class="card-text">Süre: @hizmet.SureDakika dakika</p>
                            <p class="card-text">@hizmet.Aciklama</p>

                            @if (email == "y225052054@sakarya.edu.tr")
                            {
                                <a href="/Hizmetler/Edit/@hizmet.Id" class="btn btn-primary btn-sm">Düzenle</a>
                                <a href="/Hizmetler/Delete/@hizmet.Id" class="btn btn-danger btn-sm">Sil</a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
