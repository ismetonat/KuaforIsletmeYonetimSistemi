@model Hizmetler

@{
    ViewData["Title"] = "Hizmet Sil";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #ff9a9e, #fad0c4);
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            margin: 50px auto;
            max-width: 600px;
            padding: 20px;
            background: #fff;
            border-radius: 15px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #ff6f61;
            text-align: center;
            font-size: 2rem;
            margin-bottom: 20px;
        }

        .btn-danger {
            background: #ff3d3d;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 30px;
            font-size: 1rem;
        }

        .btn-secondary {
            background: #6c757d;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 30px;
            font-size: 1rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Hizmeti Sil</h2>
        @if (Model != null)
        {
            <p><strong>@Model.Ad</strong> adlı hizmeti silmek istediğinizden emin misiniz?</p>
            <form method="post" action="/Hizmetler/Delete/@Model.Id">
                @Html.AntiForgeryToken()
                <div class="text-center">
                    <button type="submit" class="btn btn-danger">Sil</button>
                    <a href="/Hizmetler" class="btn btn-secondary">İptal</a>
                </div>
            </form>
        }
        else
        {
            <div class="alert alert-danger">
                Geçersiz hizmet bilgisi. Lütfen geri dönün.
            </div>
            <div class="text-center">
                <a href="/Hizmetler" class="btn btn-secondary">Hizmet Listesine Dön</a>
            </div>
        }
    </div>
</body>
</html>
