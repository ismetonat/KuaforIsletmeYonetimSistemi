<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Glow & Grace</title>

    <!-- Styles Section -->
    @RenderSection("Styles", required: false)

    <!-- Global CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        body {
            padding-top: 56px; /* Üst barın yüksekliği kadar boşluk bırak */
        }
    </style>
</head>
<body>
    <header>
        <!-- Fixed navigation bar -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
            <div class="w-100 d-flex justify-content-between">
                <!-- Sol tarafa KUAFÖR yazısı -->
                <a class="navbar-brand ms-3" href="/">GLOW & GRACE</a>
                <div class="d-flex">
                    <!-- Sağ tarafa navigasyon menü -->
                    <button class="navbar-toggler me-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="nav-link active" href="/">Ana Sayfa</a>
                            </li>
                            <!-- Kullanıcı durumunu göster -->
                            @await Component.InvokeAsync("UserStatus")
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="container mt-5">
        @RenderBody()
    </main>
    <footer class="bg-dark text-light text-center py-3">
        <div">
            &copy; 2025 Glow & Grace. Tüm Hakları Saklıdır.
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
