@model IEnumerable<Salon>

@{
    ViewData["Title"] = "Salon Listesi";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Google Fonts Bağlantısı -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        /* Genel Arka Plan */
        body {
            font-family: 'Roboto', sans-serif;
            height: 100vh;
            display: grid;
            justify-content: center;
            align-items: center;
            color: #4f546c;
            font-size: 0.9rem;
            background-color: #f3f8fe;
            margin: 0;
            padding: 0;
        }

        /* Konteyner */
        .container {
            margin: 20px auto;
            max-width: 1200px;
            padding: 20px;
            background: #fff;
            border-radius: 15px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        }

        /* Başlık */
        h2 {
            color: #ff6f61;
            text-align: center;
            font-size: 2.5rem;
            margin-bottom: 20px;
            font-weight: 700;
        }

        /* Kayıt Sayısı */
        .record-count {
            text-align: right;
            font-size: 1.2rem;
            color: #555;
            margin-bottom: 20px;
            font-weight: bold;
        }

        /* Tablo */
        .table {
            border-collapse: collapse;
            box-shadow: 20px 20px 20px 5px #a7bad3;
            background-color: white;
            text-align: left;
            width: 100%;
            margin: 0 auto;
        }

            .table th {
                background-color: #d0def2;
                padding: 0.75rem 2rem;
                text-transform: uppercase;
                letter-spacing: 0.1rem;
                font-size: 0.8rem;
                font-weight: 700;
            }

            .table td {
                padding: 1rem 2rem;
            }

            .table tr:nth-child(even) {
                background-color: #f3f8fe;
            }

            .table tr:hover {
                background: #ffe3e3;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>Salon Listesi</h2>
        <a href="/Salon/Create" class="add-btn">+ Yeni Salon Ekle</a>
        <div class="record-count">
            Toplam Kayıt: @Model.Count()
        </div>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Salon Adı</th>
                        <th>Adres</th>
                        <th>Telefon</th>
                        <th>Açıklama</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-muted">Henüz kayıtlı salon yok.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var salon in Model)
                        {
                            <tr>
                                <td>@salon.Name</td>
                                <td>@salon.Address</td>
                                <td>@salon.Phone</td>
                                <td>@salon.Description</td>
                                <td>
                                    <a href="/Salon/Edit/@salon.Id" class="btn btn-outline-primary">Düzenle</a>
                                    <a href="/Salon/Delete/@salon.Id" class="btn btn-outline-danger">Sil</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
