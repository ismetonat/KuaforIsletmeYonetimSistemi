@model KuaforIsletmeYonetimSistemi.ViewModels.AdminDashboardViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: #f4f4f9;
            font-family: Arial, sans-serif;
        }

        .dashboard-header {
            margin: 20px 0;
            text-align: center;
        }

        .dashboard-container {
            margin-top: 30px;
        }

        .card {
            border-radius: 10px;
        }

        .general-info, .income-info {
            margin-bottom: 20px;
        }

        .card-header {
            font-weight: bold;
            background-color: #007bff;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="dashboard-header">
            <h1>Admin Dashboard</h1>
            <p>Hoş geldiniz! Yönetim paneline buradan ulaşabilirsiniz.</p>
        </div>

        <!-- Genel Bilgiler -->
        <div class="row general-info">
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-header">Toplam Kullanıcı</div>
                    <div class="card-body">
                        <h3>@Model?.ToplamKullanici ?? 0</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-header">Toplam Çalışan</div>
                    <div class="card-body">
                        <h3>@Model?.ToplamCalisan ?? 0</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-header">Toplam Randevu</div>
                    <div class="card-body">
                        <h3>@Model?.ToplamRandevu ?? 0</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-header">Toplam Hizmet</div>
                    <div class="card-body">
                        <h3>@Model?.ToplamHizmet ?? 0</h3>
                    </div>
                </div>
            </div>
        </div>

        <!-- Gelir Bilgileri -->
        <div class="row income-info">
            <div class="col-md-6">
                <div class="card text-center">
                    <div class="card-header">Haftalık Gelir</div>
                    <div class="card-body">
                        <h3>@Model?.HaftalikGelir ?? 0 TL</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card text-center">
                    <div class="card-header">Aylık Gelir</div>
                    <div class="card-body">
                        <h3>@Model?.AylikGelir ?? 0 TL</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
