@model Calisanlar

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Çalışan Sil</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(to right, #ff9a9e, #fecfef);
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 600px;
            margin: 40px auto;
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.1);
        }

        header h1 {
            text-align: center;
            color: #444;
            margin-bottom: 20px;
        }

        p {
            font-size: 1rem;
            margin-bottom: 10px;
            color: #555;
        }

        .btn-danger, .btn-cancel {
            display: inline-block;
            padding: 10px 20px;
            font-size: 1rem;
            border-radius: 5px;
            text-decoration: none;
            color: #fff;
            margin-right: 10px;
        }

        .btn-danger {
            background-color: #dc3545;
        }

            .btn-danger:hover {
                background-color: #c82333;
            }

        .btn-cancel {
            background-color: #6c757d;
        }

            .btn-cancel:hover {
                background-color: #5a6268;
            }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <h1>Çalışan Sil</h1>
        </header>
        <p><strong>Ad:</strong> @Model.Ad</p>
        <p><strong>Soyad:</strong> @Model.Soyad</p>
        <p><strong>Telefon:</strong> @Model.Telefon</p>
        <p><strong>Unvan:</strong> @Model.Unvan</p>
        <p style="color: red; font-weight: bold;">Bu çalışanı silmek istediğinize emin misiniz?</p>
        <form method="post" action="/Calisanlar/Delete/@Model.Id">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn-danger">Sil</button>
            <a href="/Calisanlar" class="btn-cancel">İptal</a>
        </form>
    </div>
</body>
</html>
